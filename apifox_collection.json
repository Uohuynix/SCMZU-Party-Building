  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT Token认证"
      }
    },
    "schemas": {
      "Student": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "学员ID",
            "example": 1
          },
          "student_no": {
            "type": "string",
            "description": "学号",
            "example": "2021001"
          },
          "name": {
            "type": "string",
            "description": "姓名",
            "example": "张三"
          },
          "gender": {
            "type": "string",
            "enum": ["male", "female"],
            "description": "性别",
            "example": "male"
          },
          "ethnicity": {
            "type": "string",
            "description": "民族",
            "example": "汉族"
          },
          "birth_date": {
            "type": "string",
            "format": "date-time",
            "description": "出生日期",
            "example": "2000-01-01T00:00:00Z"
          },
          "education": {
            "type": "string",
            "description": "学历",
            "example": "本科"
          },
          "phone": {
            "type": "string",
            "description": "电话",
            "example": "13800138001"
          },
          "id_card": {
            "type": "string",
            "description": "身份证号",
            "example": "110101200001011234"
          },
          "major_class": {
            "type": "string",
            "description": "专业班级",
            "example": "计算机科学与技术"
          },
          "type": {
            "type": "string",
            "enum": ["masses", "activist", "candidate", "probationary", "formal"],
            "description": "政治面貌",
            "example": "masses"
          },
          "admission_date": {
            "type": "string",
            "format": "date-time",
            "description": "入学日期",
            "example": "2021-09-01T00:00:00Z"
          },
          "conversion_date": {
            "type": "string",
            "format": "date-time",
            "description": "转正日期",
            "example": "2023-06-01T00:00:00Z"
          },
