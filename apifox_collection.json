{
  "openapi": "3.0.0",
  "info": {
    "title": "党校管理系统 API",
    "description": "基于Go语言和Gin框架开发的党校管理系统API接口文档",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@example.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "开发环境"
    }
  ],
  "tags": [
    {
      "name": "系统状态",
      "description": "系统健康检查相关接口"
    },
    {
      "name": "用户认证",
      "description": "用户登录、注册、认证相关接口"
    },
